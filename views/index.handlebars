<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <div class="jumbotron">
          <h2>This is our Home Page!</h2>
        </div>

        <div class="container">
          <h2>Modal Example</h2>
          <!-- Trigger the modal with a button -->
          <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open
            Modal</button>

          <!-- Modal -->
          <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                  <form class="clearfix mb-4" action="POST">
                  <div class="form-group">
                    <label for="name-text">Name</label>
                    <input type="text" id="name-text" class="form-control" aria-describedby="name-text"
                      placeholder="Enter Name Text">
                  </div>
                  <div class="form-group">
                    <label for="console-text">Console</label>
                    <input type="text" id="console-text" class="form-control" aria-describedby="console-text"
                      placeholder="Enter Console Text">
                  </div>
                  <div class="form-group">
                    <label for="sn-text">Screen Name</label>
                    <input type="text" id="sn-text" class="form-control" aria-describedby="sn-text"
                      placeholder="Enter Screen Name">
                  </div>
                  <div class="form-group">
                    <label for="game-text">Game</label>
                    <input type="text" id="game-text" class="form-control" aria-describedby="game-text"
                      placeholder="Enter Game Name">
                  </div>
                  <div class="form-group">
                    <label for="post-description">Post</label>
                    <textarea class="form-control" id="post-description" aria-describedby="post-description"
                      placeholder="Enter Post Description"></textarea>
                  </div>
                  <button id="submit" class="btn btn-primary float-right">Submit</button>
                </form>

                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>

            </div>
          </div>

        </div>


        <h3>Posts:</h3>


        <ul id="post-list" class="list-group">
          {{#each posts}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="post/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>