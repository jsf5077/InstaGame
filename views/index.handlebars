<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="name-text">Name</label>
            <input type="text" id="name-text" class="form-control" aria-describedby="name-text" placeholder="Enter Name Text">
          </div>
          <div class="form-group">
            <label for="console-text">Console</label>
            <input type="text" id="console-text" class="form-control" aria-describedby="console-text" placeholder="Enter Console Text">
          </div>
          <div class="form-group">
            <label for="sn-text">Screen Name</label>
            <input type="text" id="sn-text" class="form-control" aria-describedby="sn-text" placeholder="Enter Screen Name">
          </div>
          <div class="form-group">
            <label for="game-text">Game</label>
            <input type="text" id="game-text" class="form-control" aria-describedby="game-text" placeholder="Enter Game Name">
          </div>
          <div class="form-group">
            <label for="post-description">Post</label>
            <textarea class="form-control" id="post-description" aria-describedby="post-description" placeholder="Enter Post Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Posts:</h3>
        <ul id="post-list" class="list-group">
          {{#each post}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="post/{{this.id}}">{{this.name}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
